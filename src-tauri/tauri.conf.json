{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "productName": "WebFeed",
    "version": "0.0.0",
    "identifier": "me.truongvan.WebFeed",
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "app": {
        "security": {
            "csp": "Content-Security-Policy: img-src 'self' asset://localhost/*",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$HOME/**/*"
                ]
            }
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "",
                "width": 800,
                "height": 600,
                "titleBarStyle": "Overlay"
            }
        ]
    }
}
